        "nock": "^13.2.4",
        "react-dom": "^16.14.0",
        "sqlite3": "^5.0.2",
        "styled-components": "^5.2.0",
        "supertest": "^6.2.2",
        "webpack": "^5.70.0",
        "webpack-cli": "^4.10.0",
        "webpack-dev-server": "^4.7.4"
    }
