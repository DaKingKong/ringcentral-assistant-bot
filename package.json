{
    "name": "ring-bot",
    "version": "0.0.1",
    "description": "RingCentral Bot Add-In",
    "keywords": [
        "RingCentral",
        "Add-In",
        "Bot"
    ],
    "main": "index.js",
    "scripts": {
        "start": "node src/server.js",
        "dev": "node -r dotenv/config src/server.js",
        "ngrok": "ngrok http -region us 6066 ",
        "test": "set NODE_ENV=test&&jest --forceExit -i",
        "client": "webpack-dev-server --config webpack-dev-server.config.js",
        "client-build": "set NODE_ENV=production&& webpack --config webpack-production.config.js",
        "serverless-build": "node ./scripts/serverless-build",
        "serverless-deploy": "node ./scripts/serverless-deploy",
        "tunnel": "lite-http-tunnel start 6066 -p assistant"
    },
    "dependencies": {
        "@octokit/rest": "^18.12.0",
        "adaptive-expressions": "^4.14.1",
        "adaptivecards-templating": "^2.2.0",
        "axios": "^0.27.2",
        "client-oauth2": "^4.3.3",
        "commander": "^9.2.0",
        "express": "^4.17.1",
        "glip-integration-js": "^0.2.1",
        "inquirer": "^8.2.4",
        "moment": "^2.29.3",
        "pg": "^8.7.3",
        "pug": "^3.0.0",
        "react": "^18.2.0",
        "ringcentral-chatbot-core": "^1.0.11",
        "sequelize": "^5.22.3",
        "serverless": "^3.18.1",
        "serverless-deployment-bucket": "^1.6.0",
        "serverless-http": "^3.0.1",
        "shelljs": "^0.8.5",
        "shortid": "^2.2.16",
        "simple-git": "^3.7.1"
    },
    "devDependencies": {
        "@babel/core": "^7.11.6",
        "@babel/plugin-proposal-class-properties": "^7.3.4",
        "@babel/plugin-proposal-decorators": "^7.3.0",
        "@babel/plugin-proposal-export-default-from": "^7.2.0",
        "@babel/plugin-proposal-function-bind": "^7.2.0",
        "@babel/plugin-proposal-nullish-coalescing-operator": "^7.10.4",
        "@babel/plugin-proposal-optional-chaining": "^7.3.4",
        "@babel/plugin-transform-runtime": "^7.3.4",
        "@babel/preset-env": "^7.11.5",
        "@babel/preset-react": "^7.8.3",
        "@emoji-mart/data": "^1.0.2",
        "@material-ui/core": "^4.11.4",
        "@ringcentral/juno": "^1.11.1",
        "@ringcentral/juno-icon": "^1.8.0",
        "babel-loader": "^8.1.0",
        "dotenv": "^10.0.0",
        "emoji-mart": "^5.0.0",
