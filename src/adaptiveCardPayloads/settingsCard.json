{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.3",
    "body": [
        {
            "type": "TextBlock",
            "text": "Response Settings",
            "wrap": true,
            "size": "Large",
            "weight": "Bolder"
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "SMS Response",
                            "wrap": true,
                            "separator": true,
                            "weight": "Bolder"
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "Status: ${smsEnable}",
                            "wrap": true,
                            "separator": true,
                            "weight": "Bolder",
                            "horizontalAlignment": "Right"
                        }
                    ]
                }
            ],
            "separator": true
        },
        {
            "type": "FactSet",
            "spacing": "Small",
            "facts": [
                {
                    "title": "Message",
                    "value": "${smsReply}"
                }
            ]
        },
        {
            "type": "ActionSet",
            "actions": [
                {
                    "type": "Action.Submit",
                    "title": "Edit",
                    "data": {
                        "botId": "${botId}",
                        "rcUserId": "${rcUserId}",
                        "actionType": "smsSettingDialog"
                    }
                }
            ]
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "Image",
                            "url": "https://raw.githubusercontent.com/ringcentral/ringcentral-google-drive-notification-add-in/master/staticResources/feedback.png",
                            "width": "20px",
                            "horizontalAlignment": "Left"
                        }
                    ],
                    "width": "auto"
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "[Feedback](https://forms.gle/PqJS5rmoJR9cCLVj7)",
                            "wrap": true,
                            "size": "Small",
                            "horizontalAlignment": "Left"
                        }
                    ],
                    "spacing": "Small",
                    "verticalContentAlignment": "Center"
                }
            ],
            "horizontalAlignment": "Left",
            "spacing": "Medium"
        }
    ]
}